{
	"compilerOptions": {
		"baseUrl": "./",
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"paths": {},
		"skipLibCheck": true,
		"target": "ES2021",
		"types": ["node"],

		/* Bundler mode */
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true,

		/* Linting */
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true
	},
	"exclude": ["node_modules"]
}
